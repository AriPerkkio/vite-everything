{
    "name": "vite-everything",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "deploy": "gh-pages -d dist",
        "lint": "eslint . --max-warnings 0 --ext .js,.ts,.tsx",
        "test": "vitest",
        "test:component": "cypress run-ct --config-file config/cypress/cypress.json",
        "cy:open-ct": "cypress open-ct --config-file config/cypress/cypress.json",
        "preview": "vite preview",
        "storybook": "start-storybook --port 6006 --config-dir config/storybook --quiet --loglevel error"
    },
    "dependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@cypress/react": "^5.12.4",
        "@cypress/vite-dev-server": "2.2.2",
        "@mdx-js/react": "^2.1.1",
        "@storybook/builder-vite": "^0.1.33",
        "@storybook/react": "^6.4.22",
        "@testing-library/cypress": "^8.0.2",
        "@types/node": "^16.11.7",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "@vitejs/plugin-react": "^1.3.0",
        "cypress": "^9.6.1",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.5.0",
        "gh-pages": "^4.0.0",
        "prettier": "^2.6.2",
        "sass": "^1.51.0",
        "typescript": "^4.6.3",
        "vite": "^2.9.9",
        "vitest": "^0.12.6"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "bracketSameLine": true
    }
}
