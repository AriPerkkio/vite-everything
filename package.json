{
    "name": "vite-everything",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "deploy": "gh-pages -d dist",
        "lint": "eslint . --max-warnings 0 --ext .js,.ts,.tsx",
        "test": "vitest",
        "test:component": "cypress run-ct --config-file config/cypress/cypress.json",
        "test:integration": "start-server-and-test dev http-get://localhost:3000 'cypress run --config-file test/integration/cypress.json'",
        "test:e2e": "cypress run --config-file test/end-to-end/cypress.json",
        "test:docs": "start-storybook --smoke-test --config-dir config/storybook",
        "cy:open-ct": "cypress open-ct --config-file config/cypress/cypress.json",
        "preview": "vite preview",
        "storybook": "start-storybook --port 6006 --config-dir config/storybook --quiet --loglevel error"
    },
    "dependencies": {
        "react": "^18.1.0",
        "react-dom": "^18.1.0"
    },
    "devDependencies": {
        "@cypress/react": "^5.12.5",
        "@cypress/vite-dev-server": "^2.2.3",
        "@mdx-js/react": "^2.1.1",
        "@storybook/builder-vite": "^0.1.36",
        "@storybook/react": "^6.5.6",
        "@testing-library/cypress": "^8.0.2",
        "@types/node": "^17.0.38",
        "@types/react": "^18.0.10",
        "@types/react-dom": "^18.0.5",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vitejs/plugin-react": "^1.3.2",
        "cypress": "^9.7.0",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.5.0",
        "gh-pages": "^4.0.0",
        "prettier": "^2.6.2",
        "sass": "^1.52.1",
        "start-server-and-test": "^1.14.0",
        "typescript": "^4.7.2",
        "vite": "^2.9.9",
        "vitest": "^0.13.1"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "bracketSameLine": true
    }
}
